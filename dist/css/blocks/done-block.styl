.done-block {
	width: 100%;
	min-height: 100px;
	position: relative;
	margin: 20px auto;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	align-items: flex-start;
	&__logical {
		display: none;
		&:first-child {
			display: block;
		}
	}
	&__not__find{
		color:#fff;
	}
	&__header {
		margin: 20px 0px 20px 20px;
		opacity: .5;
		font-size: 120%;
	}
	&::before {
		position: absolute;
		top: -15px;
		left: 10px;
		padding: 5px 20px;
		border-radius: 4px;
		font-weight: 800;
	}
	&_todo {}
	&_sprint {
		.done-task {
			background-color: rgba(51, 204, 255, .1);
		}
	}
	&_testing {
		.done-task {
			background-color: rgba(255, 153, 102, .1);
		}
	}
	&_done {
		.done-task {
			background-color: rgba(0, 204, 0, .1);
		}
	}
}

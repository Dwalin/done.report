
.done-controls {
	display: flex;
	justify-content: space-between;

	&>div {
		width: calc(50% - 10px);
	}
	&>span {
		display: block;
		font-size: 100%;
		padding: 10px 20px;
	}
}


@media (max-width: 980px) {
	.done-controls{
		&>span{
			display: block;
			margin-top: 20px;
		}
	}
}

@media (max-width: 580px) {
	.done-controls{
		flex-direction: column;
		&>div{
			width: 100%;
		}
	}
}
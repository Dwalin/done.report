.done-navigation {
	position: relative;
	margin: 20px auto 10px;
	min-width: 320px;
	max-width: 1600px;
	line-height: 32px;
	padding: 10px 0;
	display: none;
	justify-content: flex-start;

	span {
		margin: 0 20px;
		color: alpha($c-main-text, .75);
		height: 32px;
	}
	&__item {
		position: relative;
		display: inline-block;
		box-sizing: content-box;
		border-radius: 4px;
		border: 1px solid transparent;
		padding: 0 40px;
		text-align: center;
		background:
		linear-gradient(rgba(250, 250, 250, 1), rgba(255, 255, 255, 1)) padding-box,
		linear-gradient(rgba(255, 255, 255, 1), rgba(250, 250, 250, 1)) border-box,
		$c-main-blue border-box;
		box-shadow:
		0 8px 16px -10px alpha(darken($c-main-blue, 20), .4),
		inset 0 2px 4px rgba(40, 40, 40, .05);
		font-size: 125%;
		height: 30px;
		line-height: 30px;
		text-decoration: none;
		color: alpha($c-main-text, .75);
		outline: none;
		cursor: pointer;
		transition: all .1s ease-in-out;
		margin-right: 35px;

		&:hover {
			box-shadow:
			0 12px 20px -8px alpha(darken($c-main-blue, 20), .25),
			inset 0 2px 4px rgba(40, 40, 40, .05);
			opacity: 1;
		}

		&_active {
			background-color: rgba(100, 140, 240, 1);
			color: #ffffff;
			font-weight: 800;
			opacity: 1;
			cursor: default;
			background:
			linear-gradient(lighten($c-main-blue, 5), $c-main-blue) padding-box,
			linear-gradient($c-main-blue, lighten($c-main-blue, 5)) border-box,
			$c-main-blue border-box;

			&:hover {
				box-shadow:
				0 8px 16px -10px alpha(darken($c-main-blue, 20), .4),
				inset 0 2px 4px rgba(40, 40, 40, .05);
			}
		}
		&__counter {
			font-size: 10px;
			color: alpha($c-main-text, .50);
			position: absolute;
			min-width: 20px;
			height: 20px;
			line-height: 20px;
			border-radius: 10px;
			top: 4px;
			right: -15px;
			background-color: rgba(250, 250, 250, 1);
			box-shadow:	0 2px 8px -2px alpha(darken($c-main-text, 20), .25);
			text-align: center;
		}
	}
}

@media (max-width: 980px) {
	.done-navigation {
		flex-wrap: wrap;
		&__item{
			margin-right: 10px;
			margin-bottom: 10px;
		}
	}
}
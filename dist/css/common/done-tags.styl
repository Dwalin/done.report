.done-tags {
	display: inline-flex;
	flex-wrap: wrap;
	padding: 5px 0 10px;

	&__tag {
		background-color: rgba(255, 224, 41, .75);
		padding: 0 8px 0;
		margin-right: 6px;
		border-radius: 4px;
		cursor: pointer;
		position: relative;
		transition: all .25s ease-in-out;
		margin-bottom: 10px;
		height: 30px;
		line-height: 30px;

		&__delete {
			opacity: 0;
			position: absolute;
			width: 12px;
			height: 12px;
			right: -6px;
			top: -6px;
			background-color: #ff0000;
			border-radius: 100%;
			transition: opacity .1s ease-in-out;
			cursor: pointer;
		}
		&:hover {
			background-color: rgba(255, 224, 41, 1);

			.done-tags__tag__delete {
				opacity: 1;
			}
		}
	}
	&__input {
		width: 120px;
		padding: 4px;
		border: alpha($c-main-separator, 1) 1px solid;
		border-right: none;
		height: 30px;
		margin-right: 0;
	}
	&__add {
		font-weight: bold;
		cursor: pointer;
		height: 30px;
	}
	&__form {
		display: flex;
		margin-right: 10px;
	}
}

.done-new {
	margin-top: 50px;
	padding: 20px;
	color: #ffffff;
	width: 100%;

	&_oneline {
		align-items: flex-end;
	}
	input, select, textarea {
		color: $c-main-text;
	}
	&__title {
		font-size: 125%;
		display: block;
		margin-bottom: 20px;
	}
	.done-deadline {
		width: 100px;

		input, select {
			width: 100%;
		}
	}
	&__box {
		display: flex;

		&_right {
			flex-direction: row-reverse;
			text-align: right;
		}
	}
	.done-new__field {
		width: 100%;
		height: 100%;
		display: block;
		margin-bottom: 10px;
		margin-right: 10px;
		min-width: 1px;
		opacity: .75;
		transition: .1s opacity ease-in-out;

		&:hover {
			opacity: 1;
		}
		&__new {
			opacity: 1;
		}
		input, textarea {
			width: 100%;
		}
		&__assignee {
			min-width: 160px;
			flex-grow: 2;
			width: 160px;
			opacity: 1;

			select {
				width: 100%;
			}
		}
		&__marker {
			min-width: 200px;
			width: 200px;
		}
		&__deadline {
			min-width: 100px;
			width: 100px;
		}
		&__ticket {
			min-width: 100px;
			width: 100px;
		}
		&__task {
			min-width: 200px;
			width: 200px;
			opacity: 1;
		}
		span {
			display: block;
		}
		&__time, &__tester {
			display: none;
		}
		&__description input {
			position: relative;
		}
		&__task input {
			position: relative;
		}
		input, textarea, select {
			min-height: 40px;
			border: alpha($c-main-separator, 1) 1px solid;
		}
	}
}

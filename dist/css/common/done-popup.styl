.done-popup {
	max-width: 800px;
	margin: 0 auto;
	padding: 40px 50px;
	box-shadow: 0 2px 4px rgba(80,80,80,.2);
	background-color: rgba(220, 220, 220, 1);
	border-radius: 4px;
	position: relative;

	& .mfp-close{
		color: #fff !important;
		text-shadow: 1px 1px 2px #000, -1px -1px 2px #000;
	}
	&:after{
		content: '';
		display: inline-block;
		position: absolute;
		height: 101%;
		width: 226px;
		right: -1px;
		top: -1px;
		z-index: 100;
		filter: blur(1px) sepia(100%);
		background-image: url(../img/reygan_0.jpg);
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
	}
	input {
		padding-left: 5px;
		min-height: 40px;
		box-sizing: content-box;
		border-radius: 2px 0 0 2px;
		border: 4px solid transparent;
		background: linear-gradient(#fafafa,#fff)padding-box,linear-gradient(#fff,#fafafa)border-box,#3296c8 border-box;
		box-shadow: 0 8px 16px -10px rgba(30,89,118,.4), inset 0 2px 4px rgba(40,40,40,.05);
		font-size: 120%;
		text-decoration: none;
		color: $c-main-text;
		outline: none;
		transition: all .1s ease-in-out;
		margin-right: -2px;
		border-right: none;
	}
	select {
		width: 200px;
		margin: 0 20px 0 0;
		vertical-align: top;
		padding: 4px;
		height: 34px;
		display: inline-block;
		box-sizing: content-box;
		border: 4px solid transparent;
		background: linear-gradient(#fafafa,#fff)padding-box,linear-gradient(#fff,#fafafa)border-box;
		box-shadow: 0 8px 16px -10px rgba(30,89,118,.4), inset 0 2px 4px rgba(40,40,40,.05);
		font-size: 120%;
		text-decoration: none;
		text-align: center;
		outline: none;
		transition: all .1s ease-in-out;
		cursor: pointer;
		border-right: none;
		margin-right: -2px;
		border-radius: 2px 0 0 2px;
	}
	.done-desctiption__change {
		min-width: 400px;
		min-height: 80px;
	}
	.done-button{
		height: 42px;
	}
}

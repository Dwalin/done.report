.done-mainTask{

	& .done-task {
		&__bottom{
			display: flex;
			align-items: flex-start;
			min-width: 340px;

			& *{
				margin: 0;
			}

		}
		&__field {
			&_right {
				&>button{
					@extend .done-task__time__form button;
					height: 40px;
					background: $c-main-blue;
					line-height: 42px;
				}

			}
			&_createTask{
				display: flex;
				flex-wrap: wrap;
				justify-content: space-between;

			}
			&__input{
				padding-left: 5px;
				min-height: 40px;
				border: 1px solid rgba(220,220,220,.5);

				&_task{
					width: 100%;
					border-radius: 4px 0 0 4px;
				}
				&_user{
					outline: none;
					background: $c-main-green;
					color: #fff;
					font-size: 12px;
					padding-left: 20px;
					border: none;
					border-radius: 4px;
					cursor: pointer;
					transition: box-shadow 400ms ease-out;

					&:hover{
						box-shadow: 0 12px 20px -8px rgba(30,89,118,.25), inset 0 2px 4px rgba(40,40,40,.05);
					}

					&:focus, &:focus:hover{
						border-radius: 4px 4px 0 0;
					}

					&>option{
						color: #fff;
					}

					&+span.ui-selectmenu-button.ui-widget{
						height: 40px;
						min-width: 150px;
						outline: none;
						background: $c-main-green;
						color: #fff;
						font-size: 12px;
						padding-left: 20px;
						border: none;
						border-radius: 4px;
						cursor: pointer;
						transition: box-shadow 400ms ease-out;

						& .ui-selectmenu-text{
							line-height: 40px;
							padding: 0;
						}

						& .ui-icon{
							transition: all 400ms ease-out;
						}
						&[aria-expanded='true'] .ui-icon{
							transform: rotate(180deg);
						}

						&:hover{
							box-shadow: 0 12px 20px -8px rgba(30,89,118,.25), inset 0 2px 4px rgba(40,40,40,.05);
						}
					}
				}
			}
			&__task {
				flex-basis: 100%;
				&__input{}
			}
			&__users {}
			&__ticket {}
			&__deadline {}
			&__description {}
			&__annotation {}
			&__ticket {}
		}
		&__title{
			font-size: 100%;
			padding-bottom: 76px;


		}
		&__name{
			font-weight: 400;
		}
		&__form{

		}
	}

	& .done-user {
		&__creator {
			& .name {
			}
		}
		&__assignee {
			height: auto;
			display: inline-block;
			margin-bottom: 20px;
			margin-right: 20px;
		}
	}
}

@media (max-width: 1000px) {
	.done-mainTask{
		& .done-task{
			&__field{
				&_createTask{
					display: flex;
					justify-content: space-between;
				}
			}
		}

		& .done-user{
			&__assignee{

			}
		}
	}
}

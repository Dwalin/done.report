.done-task {
  position: relative;

  //width: 100%;
  //max-width: 400px;
  //min-width: 250px;

  //изменил на больших экранах вывод тасков в четыре колонки
  flex-basis: calc(100%/4 - 20px);
  //overflow: hidden;

  min-height: 100px;
  background-color: rgba(255, 255, 255, 1);

  padding: 20px 20px;
  //border-radius: 4px;
  //box-shadow: 0px 2px 2px rgba(80, 80, 80, .1);

  box-shadow:
  0 8px 16px -10px alpha(darken($c-main-blue, 20), .1);

  margin-bottom: 20px;
  margin-right: 20px;
  //display: flex;
  //flex-direction: column;
  //justify-content: space-between;

  @media (max-width: 1280px){
  //изменил на средних экранах вывод тасков в три колонки
  flex-basis: calc(100% / 3 - 40px / 2);
}

@media (max-width: 1020px) {
flex-basis: calc(100%/2 - 10px);
}

@media (max-width: 595px){
min-width: 100%;
max-width: 100%;
flex-basis: 100%;
}

&_runtime {
  opacity: 1;
  background-color: rgba(255, 255, 255, 1);
}

&__loading {

  min-height: 283px;

  background-image: url(../img/loading.svg);
  background-position: center center;

  background-repeat: no-repeat;

  & * {
    display: none !important;
  }
}

&_form {
  margin-bottom: 20px;
  max-width: 1400px;

  display: flex;
  flex-wrap: wrap;

  padding-bottom: 10px;

  .done-task__field {
    min-height: 60px;
    //min-width: 200px;


    .done-button {
      margin-top: 10px;
      width: 100%;
      padding: 0;
      //flex-basis: 100%;
    }
  }

  input, select {
    height: 30px;
    line-height: 30px;
    border: #dcdcdc 1px solid;
    width: 100%;
  }

  textarea {
    width: 100%;
    height: 40px;
    border: #dcdcdc 1px solid;
  }
}

&__modified {
  position: absolute;
  top: -20px;
  right: 10px;
  font-size: 90%;
  color: alpha($c-main-text, .5);
}

&__delete {
  opacity: 0;
  position: absolute;
  width: 12px;
  height: 12px;
  right: -6px;
  top: -6px;
  background-color: #ff0000;
  border-radius: 100%;
  transition: opacity .25s ease-in-out;
  cursor: pointer;
}

&:hover {
  .done-task__delete {
    opacity: 1;
  }
}

&__line {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  border-bottom: 1px solid $c-main-separator;
  margin: 5px 0;
  position: relative;
  padding-bottom: 5px;

  &_runtime {
    border: none;
  }

  &._hide {
    display: none;
  }
}

&__custom {
  position: absolute;
  top: 20px;
  left: -30px;
  width: 20px;
  height: 20px;
  background-color: rgba(100, 100, 100, .25);
  border-radius: 100%;
}



&__tip {
  border-radius: 8px;
}

&__additional {
  //исправил баг в мозиле и ие
  //		position: relative;
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-content: baseline;
  margin-top: 5px;
  top: 100%;
  left: 10px;
  //исправил баг в мозиле и ие
  padding: 5px 10px;



  &__item {
    //display: flex;
    //flex-wrap: wrap;
    align-items: baseline;
    opacity: 1;
    transition: opacity .25s ease-in-out;
    //margin-right: 20px;
    //width: 50%;
    //flex-basis: 50%;

    width: 100%;

    &._hide {
      display: none;
    }

    &:hover {
      opacity: 1;
    }
  }
}

&__field {
  padding: 5px 10px;
  flex-basis: 0;
  flex-grow: 10;

  //border: 1px solid #ccc;

  display: inline-block;
  min-width: 200px;
  //min-height: 50px;
  //position: relative;
  z-index: 100;
  overflow: hidden;
  padding-left: 10px;

  &__runtime {

    font-size: 110%;
    line-height: 150%;

    &_small {
      font-size: 90%;
      margin-bottom: 10px;
    }

    &_time {
      margin-top: 10px;
      font-size: 120%;
      font-weight: bold;
    }
  }

  &_right {
    text-align: right;
    align-self: center;
    width: 100%;
    flex-basis: 100%;
  }

  &__marker {
    box-sizing: border-box;
    position: absolute;
    top: 25px;
    right: 100%;
    //transform: rotate(-90deg);
    padding: 0 16px;
    background-color: #fff;
    color: alpha($c-main-text, .5);
    min-height: 25px;
    height: 25px;
    max-height: 25px;
    line-height: 25px;
    border-radius: 4px;
    text-align: center;
    //width: 180px;
    z-index: 10;
  }

  &__annotation {
    opacity: .5;
    margin-bottom: 5px;
    font-size: 90%;
    display: block;
  }

  &__users {
    //flex-basis: 20%;
    flex-grow: 2;
    min-width: 200px;
    width: 200px;
  }

  &__task {
    //flex-basis: 20%;
    flex-grow: 5;
    //min-width: 400px;
    //max-width: 100%;
    //width: 300px;

    overflow: hidden;

    p {
      font-family: 'Lora', serif;
      font-size: 320%;
      line-height: 120%;
      font-weight: 700;
      //padding-right: 20px;
      display: block;
      margin-top: 20px;
      margin-bottom: 20px;
    }
  }

  &__description {
    //flex-basis: 20%;
    flex-grow: 10;
    min-width: 400px;
    width: 400px;
  }

  &__time {
    //flex-basis: 20%;
    min-width: 140px;

  }

  &:last-child {
    border-right: none;
  }

  @media (max-width: 980px) {
  min-width: 100%;
}
}
}
	display: flex;
	justify-content: space-between;
	margin-top: 5px;

	&__input {
		width: 80px;
		padding: 4px;
		height: 40px;
		border: alpha($c-main-separator, 1) 1px solid;
		border-right: none;
		flex-basis: 70%;

		&:first-child {
			flex-basis: 20%;
		}
	}

	&__button {
	  min-width: 30px;
		flex-basis: 10%;
	}

	&__count {
		font-size: 110%;
		display: block;
		margin-bottom: 20px;
		//font-weight: bold;
	}
